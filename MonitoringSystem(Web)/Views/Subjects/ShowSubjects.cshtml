@model IEnumerable<MonitoringSystemModel.Subject>
@{
    ViewBag.Title = "Список предметов";
}

<h2>Список предметов</h2>
<table class="table">
    <tr>
        <th>Название предмета</th>
    </tr>
    @{
        foreach (var subject in Model)
        {
            <tr>
                <td>
                    @Html.RouteLink(subject.SubjectName, "toMarks",
                                 new
                                 {
                                     controller = "Subjects",
                                     action = "ShowMarks",
                                     classId = ViewBag.ClassNumber as string,
                                     subjectId = subject.SubjectID
                                 })
                </td>
            </tr>
        }
    }
</table>